<view class="page detail">
  <view class="detail-post-meta">
    <view class="detail-post-avatar">
      <navigator url = "/pages/user/user?loginname={{detail.author.loginname}}">
        <image class="detail-post-avatar-img"
          mode = "scaleToFill"
            src = "{{detail.author.avatar_url}}"
        ></image>
      </navigator>
    </view>
    <view class="detail-post-info">
      <view class="detail-post-author-name">
        <text>{{detail.author.loginname}}</text>
      </view>
    </view>
    <view class="detail-post-time">
      <text>楼主发表于{{detail.create_at}}</text>
    </view>
    <view
    id = "{{detail.id}}"
    catchtap="collect"
     class="detail-collect-item"
    wx:if="{{detail.is_collect == true}}">取消收藏</view>
    <view
    id = "{{detail.id}}"
    catchtap="collect"
     class="detail-collect-item"
    wx:if="{{detail.is_collect == false}}">
    收藏</view>
  </view>
<view class="detail-post-content">
  <text class="content-info">
    {{detail.content}}
  </text>
</view>
  <loading hidden="{{hidden}}">
    加载中
  </loading>
  <modal title="消息" confirm-text = "确认"
  bindconfirm="confirmChange"
  bindcancel="cancelChange"
  cancel-text = "关闭" hidden="{{modalHidden}}">
  您还没有登陆cnode，前往确认登陆？
</modal>
</view>
